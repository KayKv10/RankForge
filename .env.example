# RankForge Environment Configuration
# Copy this file to .env and customize for your environment

# Database Configuration
# For SQLite (development): sqlite+aiosqlite:///./rankforge.db
# For PostgreSQL (production): postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=sqlite+aiosqlite:///./rankforge.db

# Connection Pool Configuration (PostgreSQL only, ignored for SQLite)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# Enable SQL query logging (set to "true" for debugging)
DB_ECHO=false
