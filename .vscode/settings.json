{
    // Settings for Python files
    "[python]": {
        // Set Ruff as the default formatter for Python files
        "editor.defaultFormatter": "charliermarsh.ruff",
        // Enable format on save to automatically clean your code
        "editor.formatOnSave": true,
        // Run additional "fix-all" and "organize imports" actions on save
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    // Enable basic type checking powered by your mypy installation
    "python.analysis.typeCheckingMode": "basic",
    "mypy-type-checker.importStrategy": "fromEnvironment",
    // Tell VS Code where to find your project's source code
    "python.analysis.extraPaths": [
        "./src"
    ]
}
